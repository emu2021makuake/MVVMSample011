<UserControl
    x:Class="MVVMSample011.Views.Pages.Setting1Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMSample011.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:vm="clr-namespace:MVVMSample011.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=vm:Setting1PageViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource SystemControlPageBackgroundChromeMediumLowBrush}"
    mc:Ignorable="d">
    <StackPanel>
        <ui:ToggleSwitch
            Header="Option1"
            IsOn="{Binding Check1}"
            OffContent="OFF"
            OnContent="ON" />
        <ui:ToggleSwitch
            Header="Option2"
            IsOn="{Binding Check2}"
            OffContent="OFF"
            OnContent="ON" />
    </StackPanel>
</UserControl>
